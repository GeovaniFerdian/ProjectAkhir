<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrintPembayaran">

    <ImageView android:id="@+id/ozil_1"
        android:src="@drawable/ozil_1"
        android:contentDescription="background_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View   android:id="@+id/_bg__login_page_ek2"
        android:background="@drawable/_bg__login_page_ek2_shape"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:alpha="0.8"
        />

    <View
        android:id="@+id/printbayar"
        android:layout_width="314dp"
        android:layout_height="542dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textselamat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bukti"
        />


    <TextView android:id="@+id/textselamat"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/merah1"
        android:layout_width="305dp"
        android:layout_height="58dp"
        android:layout_marginTop="50dp"
        android:text="@string/selamat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        />

    

    <View
        android:id="@+id/daftar"
        android:layout_width="145dp"
        android:layout_height="51dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/daftar"
        app:layout_constraintTop_toBottomOf="@id/silahkanprint"
        app:layout_constraintStart_toEndOf="@id/print"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View
    android:id="@+id/print"
    android:layout_width="145dp"
    android:layout_height="51dp"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="50dp"
    android:background="@drawable/print"
    app:layout_constraintTop_toBottomOf="@id/silahkanprint"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/daftar"
    />


    <TextView android:id="@+id/silahkanprint"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/merah1"
        android:layout_width="250dp"
        android:layout_height="58dp"
        android:layout_marginTop="30dp"
        android:text="@string/instruksi"
        app:layout_constraintTop_toBottomOf="@+id/printbayar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        />



</androidx.constraintlayout.widget.ConstraintLayout>